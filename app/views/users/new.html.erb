<%= stylesheet_link_tag "style_book_detail" %>
<div id="screen_title">ユーザの新規登録</div>
<div id="main">
<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<p><label for="login">ユーザ名</label><br/>
<%= f.text_field :login %></p>

<p><label for="email">メールアドレス</label><br/>
<%= f.text_field :email %></p>

<p><label for="password">パスワード</label><br/>
<%= f.password_field :password %></p>

<p><label for="password_confirmation">パスワード確認</label><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= submit_tag 'サインアップ' %></p>
<% end -%>
</div>