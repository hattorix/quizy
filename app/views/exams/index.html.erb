<h1>Listing exams</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Questions count</th>
    <th>Time limit</th>
    <th>Border line</th>
    <th>Is public</th>
    <th>User</th>
  </tr>

<% for exam in @exams %>
  <tr>
    <td><%=h exam.name %></td>
    <td><%=h exam.questions_count %></td>
    <td><%=h exam.time_limit %></td>
    <td><%=h exam.border_line %></td>
    <td><%=h exam.is_public %></td>
    <td><%=h exam.user_id %></td>
    <td><%= link_to 'Show', exam %></td>
    <td><%= link_to 'Edit', edit_exam_path(exam) %></td>
    <td><%= link_to 'Destroy', exam, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New exam', new_exam_path %>
