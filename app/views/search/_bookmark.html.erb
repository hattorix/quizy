<% if is_bookmark %>
  <% if type == "all" %>
    <% text = "このページ全ての" %>
  <% elsif type == "all_page" %>
    <% text = "全ての検索結果の" %>
  <% else %>
    <% text = "" %>
  <% end %>
  <%= image_tag('/images/bookmark.gif', :style => 'vertical-align: middle;') %>
  <%= link_to_remote "#{text}付箋を剥がす", :url=>{:action => 'off_bookmark',
                                              :id => question_id,
                                              :questions => questions,
                                              :all_questions => all_questions,
                                              :type => type}%>
<% else %>
  <% if type == "all" %>
    <% text = "このページ全てに" %>
  <% elsif type == "all_page" %>
    <% text = "全ての検索結果に" %>
  <% else %>
    <% text = "" %>
  <% end %>
  <%= image_tag('/images/bookmark_off.gif', :style => 'vertical-align: middle;', :name => "on_bookmark[]") %>
  <%= link_to_remote "#{text}付箋を貼る", :url=>{:action => 'on_bookmark',
                                            :id => question_id,
                                            :questions => questions,
                                            :all_questions => all_questions,
                                            :type => type}%>
<% end %>