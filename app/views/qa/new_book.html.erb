<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <title><%=h @page_title || "Quizy" %></title>
  <%= javascript_include_tag :defaults %>
  <%= stylesheet_link_tag "basic" %>
  <%= stylesheet_link_tag "style_book_detail" %>
  <script type="text/javascript" src="/javascripts/suggest.js"></script>

</head>
<body>
<div id="container">
<div id="contents">
<div id="screen_title">ブックの新規作成</div>
<div id="message"></div>
<div id="main">
  <% remote_form_for(@book, :url=>{:action => 'create_book'}) do |f| %>
    <%= f.error_messages %>
    <div id="name_public_field">
      <div class="field">
        <%= f.label "ブック名" %><br />
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label "公開可否" %><br />
        <%= f.radio_button(:is_public, 1) %>：公開
        <%= f.radio_button(:is_public, 2) %>：非公開
      </div>
    </div>
    <div id="outline_field">
      <div class="field">
        <%= f.label "概要" %><br />
        <%= f.text_area :outline, :style => 'height: 10em;' %>
      </div>
    </div>
    <div id="submit_box">
      <%= f.submit "作成する" %>
      <%= button_to_function("閉じる",
                          "window.close();") %>
    </div>
  <% end -%>
</div>
</div>

    <div id="footer">
      <div id="copyright">
        Copyright &copy; 2008 ARK System CO., LTD. All Right Reserved.</div>
    </div>
  </div>
</body>
</html>